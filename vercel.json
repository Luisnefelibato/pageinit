{
  "version": 2,
  "functions": {
    "agentepage/api/tts.js": {
      "maxDuration": 30
    },
    "agentepage/api/ai-response.js": {
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/agentepage/api/$1"
    },
    {
      "source": "/",
      "destination": "/agentepage/index.html"
    },
    {
      "source": "/list",
      "destination": "/agentepage/list/index.html"
    },
    {
      "source": "/(sofia|carolina|luis|mariana|juan|carlos|marcela|andrea|andres|valentina)",
      "destination": "/agentepage/list/$1/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ]
}